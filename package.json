{
  "name": "nuxt-app",
  "version": "1.0.0",
  "module": "commonjs",
  "private": true,
  "scripts": {
    "build": "yarn prisma:files && nuxt build && yarn prisma:db",
    "dev": "concurrently \"nuxt dev\" \"sass --watch src/scss/style.scss:assets/css/style.css\"",
    "sass:watch": "sass --watch src/scss/style.scss:assets/css/style.css &",
    "prisma:files": "cp ./node_modules/.prisma/client/*.js ./node_modules/@prisma/client",
    "prisma:files:windows": "xcopy /s /y .\\\\node_modules\\\\.prisma\\\\client\\\\*.js .\\\\node_modules\\\\@prisma\\\\client &",
    "prisma:db": "cp ./prisma/dev.db ./.output/server/node_modules/.prisma/client",
    "prisma:db:windows": "xcopy /s /y .\\\\prisma\\\\dev.db .\\\\.output\\\\server\\\\node_modules\\\\.prisma\\\\client &",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "start": "nuxt start",
    "studio": "yarn prisma studio",
    "migrate": "yarn prisma migrate dev --name init && yarn prisma generate",
    "build:windows": "yarn prisma:files:windows && nuxt build && yarn prisma:db:windows"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@types/nodemailer": "^6.4.7",
    "@types/uuid": "^9.0.1",
    "@types/ws": "^8.5.4",
    "concurrently": "^8.0.1",
    "nuxt": "^3.4.3",
    "sass": "^1.62.1"
  },
  "dependencies": {
    "@prisma/client": "^4.13.0",
    "nodemailer": "^6.9.1",
    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "uuid": "^9.0.0",
    "ws": "^8.13.0"
  }
}
